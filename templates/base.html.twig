<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://bootswatch.com/5/minty/bootstrap.min.css">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{path('home')}}">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('home')}}">Accueil</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('mesannnonces')}}">Mes annonces</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('admin')}}">Admin</a>
                    </li>
                    {% endif %}

                    {% if app.user %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{path('profil')}}">Profil</a>
                    </li>
                    {% endif %}


                </ul>
                <div class="d-flex">
                    {% if app.user %}
                    <a href="{{path('logout')}}" class="btn btn-danger mx-2">Logout</a>
                    {% else %}
                    <a href="{{path('login')}}" class="btn btn-secondary mx-2">Login</a>
                    <a href="{{path('register')}}" class="btn btn-info mx-2">Register</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-3">
        {% block body %}{% endblock %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>